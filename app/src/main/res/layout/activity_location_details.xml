<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationDetailsActivity">

    <ImageView
        android:id="@+id/CityImage"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:src="@drawable/mumbai"
        android:scaleType="fitXY"
        android:layout_marginTop="0dp"
        android:layout_height="300dp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/CityImage"
        android:layout_alignTop="@+id/CityImage"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Mumbai"/>-->

    <TextView
        android:id="@+id/CityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CityImage"
        android:layout_marginStart="20dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="-50dp"
        android:text="Mumbai"/>

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/background"
        android:scaleType="fitXY"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_marginStart="5dp"
        android:layout_below="@id/CityImage"
        />
    <TextView
        android:text="Dine"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:textAlignment="center"
        android:layout_alignStart="@id/btn1"
        android:clickable="false"
        android:layout_alignEnd="@id/btn1"
        android:layout_marginTop="-45dp"
        />

    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/btn1"



        android:layout_marginStart="5dp"
        android:layout_below="@id/CityImage"
        />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/btn2"
        android:layout_marginStart="5dp"
        android:src="@drawable/trav"
        android:scaleType="fitXY"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/CityImage"
        />

    <TextView
        android:text="Dine"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn3"
        android:textAlignment="center"
        android:layout_alignStart="@id/btn3"
        android:textStyle="bold"
        android:clickable="false"
        android:layout_alignEnd="@id/btn3"
        android:layout_marginTop="-45dp"
        />
</RelativeLayout>